// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model MergeRequest {
  id                      String @id
  target_branch           String
  state                   String
  num_of_commits          Int
  num_of_comments         Int
  first_commited_at       DateTime?
  mergerequest_created_at DateTime
  first_reviewd_at        DateTime?
  merged_at               DateTime?
  released_at             DateTime?
  is_release_committed    Boolean
  author                  String
  title                   String
}

generator zod {
  provider                 = "zod-prisma"
  output                   = "../src/schema"
  relationModel            = true
  modelCase                = "PascalCase"
  modelSuffix              = "Model"
  useDecimalJs             = true
  imports                  = null
  prismaJsonNullability    = false
}